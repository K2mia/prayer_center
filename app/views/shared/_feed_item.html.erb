
<li id="<%= feed_item.id %>">
  <% if feed_item.anon? %>
    <span class='user'>
      <b>Posted anonymously</b>:
    </span>
  <% else %>
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class='user'>
      <%= link_to feed_item.user.name, feed_item.user %>:
    </span>
  <% end %>
  <span class='keys_content'>
    <%= feed_item.prayer %> 

    <% if current_user?( feed_item.user ) %>
      <!-- user-specific stuff here -->

      <a href="javascript:show_div('#edit_form_<%= feed_item.id.to_s %>');">[edit]</a>

      <div id='edit_form_<%= feed_item.id.to_s %>' style='display:none; margin:10px;'>
        <b>Edit your prayer</b>:
        <a href="javascript:hide_div('#edit_form_<%= feed_item.id.to_s %>');">close</a><br />

          <%= render :partial => 'shared/prayer_edit_form', :locals => { :prayer => feed_item } %>

      </div>    <!-- #edit_form_prayer.id -->
    <% end %>   <!-- if current_user? (prayer.user ) -->
  </span>

  <span class='timestamp'>
    Posted <%= time_ago_in_words( feed_item.created_at ) + ' ago.' %>
  </span>

  <% if current_user?( feed_item.user ) %>
  <% end %>
</li>
