<% provide( :title, 'Home' ) %>

<% if signed_in? %>
  <div class="row">
    <aside class='span4'>
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/keyword_form' %>
      </section>
    </aside>

    <div class='span8'>
      <h3>Recent Prayers</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Prayer Center | Home</h1>

    <h2>
      To get started please 
      <%= link_to 'Sign In', '/signin' %>, 
      or Create your Free Account.
    </h2> 

    <%= link_to 'Create Free Account', signup_path, class:"btn btn-large btn-primary" %>

  </div>

<% end %>
